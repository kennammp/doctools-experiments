#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@openapi-contrib/json-schema-to-openapi-schema/bin/json-schema-to-openapi-schema.js" "$@"
else 
  exec node  "$basedir/../@openapi-contrib/json-schema-to-openapi-schema/bin/json-schema-to-openapi-schema.js" "$@"
fi
